# EditorConfig is awesome: https://EditorConfig.org

root = true

# Defaults; Unix-style newline with POSIX compliant newline ending every file.
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Note - Docstrings and comments should use max_line_length = 79
[*.py]
indent_size = 4
max_line_length = 100

[*.json]
insert_final_newline = ignore

[**/vendor/**]
indent_style = ignore
indent_size = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 100

[*.md]
max_line_length = 100
